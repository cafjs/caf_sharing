{
    "name": "top",
    "components": [
        {
            "name": "cp"
        },
        {
            "name": "cp2",
            "module" : "caf_redis#plug",
            "description" : "Checkpointing service",
            "env" : {
               "nodeId": "default",
               "redis" : {
                   "password" : null,
                   "hostname" : "localhost",
                   "port" : 6379
                },
                "coalescing" : {
                    "interval" : 10,
                    "maxPendingUpdates" : 20
                }
            }
        },
        {
            "name": "sharing",
            "module": "../../index.js#plug",
            "description": "Sharing service",
            "env" : {
                "persistService" : "cp",
                "routeService" : "cp2"
            }
        }
    ]
}
